BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            size_hint: 3.0, 1.0
            font_size: 34
            on_text: app.handle_calculate(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 20
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 20
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        color: (1, 1, 0, 1)
        font_size: 34